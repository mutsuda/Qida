<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", incidences_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_incidence_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", incidence_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
    		
            <div class="wat-cf">
            
<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @incidence.title %>
</p>

<p>
  <b>Location:</b>
  <%= @incidence.location %>
</p>

<p>
  <b>Description:</b>
  <%= @incidence.description %>
</p>

<p>
  <b>Date:</b>
  <%= @incidence.date %>
</p>

<p>
  <b>Status:</b>
  <%= @incidence.status %>
</p>


<%= link_to 'Edit', edit_incidence_path(@incidence) %> |
<%= link_to 'Back', incidences_path %>
        
      </div>      
    </div>
  </div>
</div>

<h2>Comments</h2>

<div id="comments">
	<%= render :partial => @incidence.comments %>
</div>

<% form_for [@incidence, Comment.new] do |f| %>
  <p>
    <%= f.label :body, "Comment Description" %><br />
    <%= f.text_area :body %>
  </p>
   <%= f.hidden_field :user_id, :value => current_user.id %>
  <p>
    <%= f.submit "Add Comment" %>
  </p>
<% end %>



