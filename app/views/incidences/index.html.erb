<h1>Listing incidences</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Location</th>
    <th>Description</th>
    <th>Date</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @incidences.each do |incidence| %>
  <tr>
    <td><%= incidence.title %></td>
    <td><%= incidence.location %></td>
    <td><%= incidence.description %></td>
    <td><%= incidence.date %></td>
    <td><%= incidence.status %></td>
    <td><%= link_to 'Show', incidence %></td>
    <td><%= link_to 'Edit', edit_incidence_path(incidence) %></td>
    <td><%= link_to 'Destroy', incidence, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% if user_signed_in? %>
		<%= link_to 'New Incidence', new_incidence_path %>
<% end %>	

